<h1><%= @album.title %></h1>

<!-- Album administration links -->
<div id="album-admin">
  <%= link_to "Download album", 
    :controller => :album, 
    :action => :download,
    :secret => @album.secret %>
</div>

<!-- Upload form --> 
<div id="image_upload">
  <%= form_for @album, :url => {:action => :upload_images}, :html => {:multipart => true} do |f| %>
    <%= f.hidden_field :secret %>
    <%= f.file_field :images, :multiple => "" %>
    <%= f.submit "Upload images" %>
  <% end %>
</div>

<!-- Thumbnail images -->
<div id="thumbs">
  <% @album.images.each do |image| %>
  <span class="thumb">
    <%= link_to(image_tag(image.img.url(:thumb)), 
      {
        :controller => :album,
        :action => :async_big_image,
        :image_id => image.id,
        :album_secret => @album.secret
      },
      {
        :remote => true
      }) %>
    <%= image.taken_at %>
  </span>
    <%= render :partial => "image/thumb", :object => image %>
  <% end %>
</div>

<!-- Main image -->
<div id="main-image">Initial text</div>
