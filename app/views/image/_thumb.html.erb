<div class="thumb">
  <div>
    <%= link_to image_tag(thumb.img.url(:thumb)),
      thumb.img.url(:medium),
      :rel => "colorbox"
    %>
  </div>
  <p><%= thumb.taken_at %></p>
  <%= button_to "Delete", 
    image_path(thumb, :image_id => thumb.id, :album_secret => @album.secret),
    :method => :delete,
    :confirm => "Are you sure you want to delete this image?",
    :title => "Image deletion"
  %>
</div>
