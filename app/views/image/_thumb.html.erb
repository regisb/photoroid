<div class="thumb">
  <div class="image" style="<%= "border: 8px solid #{image_html_color(thumb.author_name)}" %>">
    <span>
      <%= link_to image_tag(thumb.img.url(:medium)),
        thumb.url(:medium),
        :rel => "colorbox" %>
    </span>
  </div>
  <div class="image-tag">
    <p><%= thumb.author_name %>, <%= thumb.taken_at.asctime%></p>
  </div>
  <% if !current_user.blank? %>
    <%= button_to "Delete", 
      image_path(thumb, :image_id => thumb.id, :album_secret => @album.secret),
      :method => :delete,
      :confirm => "Are you sure you want to delete this image?",
      :title => "Image deletion"
    %>
  <% end %>
</div>
